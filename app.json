{
  "expo": {
    "owner": "uxamabt",
    "name": "Spectrum Link",
    "slug": "spectrumlink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "spectrumlink",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.uxamabt.spectrumlink",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photos to upload profile and event images.",
        "NSPhotoLibraryAddUsageDescription": "We need access to save images to your photo library.",
        "NSCameraUsageDescription": "We need access to your camera to scan QR codes for ticket validation."
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "minSdkVersion": 23,
            "compileSdkVersion": 34,
            "targetSdkVersion": 34
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to upload profile and event images.",
          "cameraPermission": "The app accesses your camera to take photos for events."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Ticketly to access your camera to scan QR codes for ticket validation."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
      "enabled": false
    },
    "extra": {
      "eas": {
        "projectId": "b73c8e50-d91b-441a-9311-6530fc4f248f"
      }
    }
  }
}